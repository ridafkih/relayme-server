{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@typings/*": [
        "typings/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  }
}