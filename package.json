{
  "name": "server-relay",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "scripts": {
    "start": "node .",
    "setup": "npm ci",
    "dev": "docker-compose down && npm run deploy:database && nodemon",
    "build": "docker-compose build",
    "build:dev": "tsc",
    "deploy": "docker-compose up -d",
    "deploy:server": "npm run dev",
    "deploy:database": "docker-compose up -d database",
    "stop": "docker-compose down",
    "obliterate": "docker-compose down --rmi all && docker-compose rm -s -f",
    "prisma:deploy": "POSTGRES_USER=prisma POSTGRES_PASSWORD=prisma POSTGRES_DB=prisma && docker-compose up -d database -p prisma",
    "prisma:pull": "prisma:deploy && prisma db pull"
  },
